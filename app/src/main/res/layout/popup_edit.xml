<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_10_pdf"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <!-- btnHighLight -->
        <LinearLayout
            android:id="@+id/btnHighLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imvHighLight"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_highlight_edit" />

            <TextView
                android:id="@+id/tvHighLight"
                style="@style/single_marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/highlight"
                android:textColor="@color/black_2D"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- btnDraw -->
        <LinearLayout
            android:id="@+id/btnDraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imvDraw"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_draw" />

            <TextView
                android:id="@+id/tvDraw"
                style="@style/single_marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/draw"
                android:textColor="@color/black_2D"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>