<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/bg_8_stroke_gray_solid_white">

    <!-- btnSelect -->
    <ImageView
        android:id="@+id/btnSelect"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginVertical="19dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- imvType -->
    <ImageView
        android:id="@+id/imvType"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginVertical="11dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_word_reader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSelect"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- tvName -->
    <TextView
        android:id="@+id/tvName"
        style="@style/single_marquee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="start|center_vertical"
        android:text="FileDocx.com"
        android:textColor="@color/black_2D"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btnBookmark"
        app:layout_constraintStart_toEndOf="@+id/imvType"
        app:layout_constraintTop_toTopOf="parent" />

    <!--tvInformationOther -->
    <TextView
        android:id="@+id/tvInformationOther"
        style="@style/single_marquee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="start|center_vertical"
        android:text="18/03/2025 | 19:00 | 3.2MB"
        android:textColor="#B22D2D2D"
        android:layout_marginEnd="16dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnBookmark"
        app:layout_constraintStart_toEndOf="@+id/imvType" />

    <!-- btnBookmark -->
    <ImageView
        android:id="@+id/btnBookmark"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_bookmark_selected_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnMore"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- btnMore -->
    <ImageView
        android:id="@+id/btnMore"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/ic_more_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>