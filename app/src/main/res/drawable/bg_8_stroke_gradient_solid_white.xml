<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="8dp" />
            <gradient
                android:angle="-90"
                android:endColor="#B10C0C"
                android:startColor="#F52C2C" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="7dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>